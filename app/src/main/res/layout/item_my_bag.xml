<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_5dp">

        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/_10dp">


            <TextView
                android:id="@+id/txtOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:text="@string/order_id_"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/_15sp" />
            <TextView
                android:id="@+id/txtOrderIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txtOrderId"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/_10dp"
                android:fontFamily="@font/gill_sans_mt"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txtItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtOrderId"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:text="Items:"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txtItemsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtOrderIdValue"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_toEndOf="@+id/txtItems"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:textColor="@color/app_color_two"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txtPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtItems"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:text="Payment :"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txtPaymentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtItemsValue"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_toEndOf="@+id/txtPayment"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:textColor="@color/app_color_two"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPayment"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:text="Price :"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txtPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPaymentValue"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_toEndOf="@+id/txtPayment"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:textColor="@color/app_color_two"
                android:textSize="@dimen/_15sp" />
            <TextView
                android:id="@+id/txtViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_button"
                android:text="View Order"
                android:layout_marginTop="@dimen/_5dp"
                android:textSize="@dimen/_12sp"
                android:textColor="@color/white"
                android:padding="@dimen/_5dp"
               android:layout_below="@+id/txtPayment"
                />
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:text="Date:"
              android:layout_toStartOf="@+id/txtDateValue"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txtDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/gill_sans_mt"
                android:maxLines="1"
                android:textColor="@color/app_color_two"
                android:textSize="@dimen/_15sp" />







        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>