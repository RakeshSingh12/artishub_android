<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            app:cardCornerRadius="@dimen/_2dp"

            >

            <RelativeLayout
                android:id="@+id/rlClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgSubCategory"
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/_120dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_below="@+id/imgSubCategory"
                    android:background="@color/stoke_color"

                    />

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_margin="@dimen/_5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/gill_sans_mt"
                    android:text="Ashutosh"
                    android:textColor="@color/app_color_two"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/txtProductCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productName"
                    android:fontFamily="@font/gill_sans_mt"
                    android:paddingLeft="@dimen/_5dp"
                    android:paddingRight="@dimen/_5dp"
                    android:text="Category :"
                    android:textColor="@color/text_color_s"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/txtProductCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productName"
                    android:layout_toRightOf="@+id/txtProductCategories"
                    android:fontFamily="@font/gill_sans_mt"
                    android:paddingLeft="@dimen/_5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingRight="@dimen/_5dp"
                    android:text=""
                    android:textColor="@color/app_color_two"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtProductCategoryName"
                    android:fontFamily="@font/gill_sans_mt"
                    android:paddingLeft="@dimen/_5dp"
                    android:paddingRight="@dimen/_5dp"
                    android:text="Price :"
                    android:paddingBottom="@dimen/_5dp"
                    android:textColor="@color/text_color_s"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/txtProductPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtProductCategoryName"
                    android:layout_toRightOf="@+id/txtProductPrice"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/gill_sans_mt"
                    android:paddingLeft="@dimen/_5dp"
                    android:paddingRight="@dimen/_5dp"
                    android:text=""
                    android:textColor="@color/app_color_two"
                    android:textSize="@dimen/_15sp" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>