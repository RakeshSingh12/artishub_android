<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/_5dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/llEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50dp"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginRight="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45dp"
                            android:paddingLeft="@dimen/_5dp"
                            android:paddingRight="@dimen/_5dp"
                            android:textColorHint="@color/app_color"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:paddingBottom="@dimen/_2dp"
                                android:paddingTop="@dimen/_2dp"
                                android:singleLine="true"
                                android:textColor="@color/app_color"
                                android:textColorHint="@color/app_color"
                                android:textSize="@dimen/_15sp" />


                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.3dp"
                            android:background="@drawable/bg_statusbar" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/llFullPhoneNo"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/_50dp"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginRight="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_below="@+id/llEmail">
                        <TextView
                            android:id="@+id/txtCountryCode"
                            android:layout_width="wrap_content"
                            android:text="+234"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5dp"
                            android:textSize="@dimen/_15sp"
                            android:textColor="@color/app_color"
                            android:layout_height="match_parent" />
                        <View
                            android:id="@+id/view"
                            android:layout_width="@dimen/_2dp"
                            android:layout_toRightOf="@+id/txtCountryCode"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:layout_marginTop="@dimen/_18dp"
                            android:layout_marginBottom="@dimen/_15dp"
                            android:background="@color/app_color"
                            />

                        <LinearLayout
                            android:id="@+id/llPhoneNo"
                            android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/view"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inputPhone"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45dp"
                                android:paddingLeft="@dimen/_5dp"
                                android:paddingRight="@dimen/_5dp"
                                android:textColorHint="@color/app_color"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/edtPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:hint="Phone Number"
                                    android:inputType="phone"
                                    android:maxLength="14"
                                    android:paddingBottom="@dimen/_2dp"
                                    android:paddingTop="@dimen/_2dp"
                                    android:singleLine="true"
                                    android:textColor="@color/app_color"
                                    android:textColorHint="@color/app_color"
                                    android:textSize="@dimen/_15sp" />


                            </android.support.design.widget.TextInputLayout>



                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.3dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_statusbar" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50dp"
                        android:layout_below="@+id/llFullPhoneNo"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginRight="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputpassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45dp"
                            android:paddingLeft="@dimen/_5dp"
                            android:paddingRight="@dimen/_5dp"
                            android:textColorHint="@color/app_color"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint=" Create Password"
                                android:inputType="textPassword"
                                android:paddingBottom="@dimen/_2dp"
                                android:paddingTop="@dimen/_2dp"
                                android:singleLine="true"
                                android:textColor="@color/app_color"
                                android:textColorHint="@color/app_color"
                                android:textSize="@dimen/_15sp" />


                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.3dp"
                            android:background="@drawable/bg_statusbar" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50dp"
                        android:layout_below="@+id/llPassword"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginRight="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputConfirmpassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45dp"
                            android:paddingLeft="@dimen/_5dp"
                            android:paddingRight="@dimen/_5dp"
                            android:textColorHint="@color/app_color"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint=" Confirm Password"
                                android:inputType="textPassword"
                                android:paddingBottom="@dimen/_2dp"
                                android:paddingTop="@dimen/_2dp"
                                android:singleLine="true"
                                android:textColor="@color/app_color"
                                android:textColorHint="@color/app_color"
                                android:textSize="@dimen/_15sp" />


                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.3dp"
                            android:background="@drawable/bg_statusbar" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/btnSignup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_below="@+id/llConfirmPassword"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginRight="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:background="@drawable/bg_statusbar"
                        android:text="SignUp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sp" />

                    <TextView
                        android:id="@+id/txtLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnSignup"
                        android:layout_marginBottom="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:fontFamily="@font/gill_sans_mt"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_5dp"
                        android:textColor="@color/text_color_s"
                        android:textSize="@dimen/_12sp" />


                </RelativeLayout>

            </ScrollView>


        </android.support.v7.widget.CardView>

    </RelativeLayout>


</layout>